<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginRight="6dp"
    android:paddingTop="16dp">

    <android.support.v7.widget.CardView
        android:id="@+id/cdChatMessageR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        app:cardBackgroundColor="#32d96f"
        android:elevation="13dp"
        app:cardCornerRadius="5dp">
    <TextView
        android:id="@+id/tvChatMessageR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Test BBBCCDD"
        android:textColor="#000000"
        android:textSize="20sp" />
    </android.support.v7.widget.CardView>
    <TextView
        android:id="@+id/tvChatMessageTR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/cdChatMessageR"
        android:text="11:40"
        android:layout_alignBottom="@id/cdChatMessageR"
        android:layout_marginRight="4dp"
        />

</RelativeLayout>
